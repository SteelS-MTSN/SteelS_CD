<h1>アーティスト一覧</h1>



<%= form_for(@artist,url: {controler: "admins_artists", action: "create" })  do |f| %>

<h4>アーティスト名</h4>
<%= f.text_field :artist_name %>

<%= f.submit %>

<% end %>

<table class="table table-striped">
	<thead>
		<tr>
			<th>
				アーティスト名
			</th>
			<th></th>
			<th></th>
		</tr>
	</thead>
	<tbody>
	    <% @artists.each do |f| %>
			<tr>
				<td>
					<%= f.artist_name %>
				</td>
				<td>
					<th><%= link_to "編集" , "admins_artists/#{artist.id}/edit" %></th>
				</td>
				<td>
					削除
				</td>
			</tr>
		<% end %>
	</tbody>
</table>
<%= paginate @artists %>