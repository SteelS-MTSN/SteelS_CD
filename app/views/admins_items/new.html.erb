<div class="container">
	<div class="col-md-2">
		<%= render 'admins/side' %>
	</div>
	<div class="col-md-8">
		<h1>新規商品情報入力</h1>

		<%= form_for(@item, url: {controller: "admins_items", action: "create"}) do |f| %>
			<div class="form-group">
				<%= f.label "商品名" %>
				<br>
				<%= f.text_field :item_name %>
			</div>
			<div class="form-group">
				<%= f.label "レーベル" %>
				<br>
				<%= f.collection_select(:label_id, Label.all, :id, :label_name) %>
			</div>
			<div class="form-group">
				<%= f.label "ジャンル" %>
				<br>
				<%= f.collection_select(:genre_id, Genre.all, :id, :genre_name) %>
			</div>
			<div class="form-group">
				<%= f.label "値段" %>
				<br>
				<%= f.number_field :price %>
			</div>
			<div class="form-group">
				<%= f.label "ジャケット画像" %>
				<br>
				<%= f.attachment_field :image %>
			</div>
			<div class="form-group">
				<%= f.label "アーティスト(2文字以上で検索してください)" %>
				<br>
				<%= f.autocomplete_field :artist_id, autocomplete_artist_name_admins_items_path %>
			</div>
			<div class="form-group">
				<%= f.submit "次へ" %>
			</div>
		<% end %>
		<%= link_to "戻る", admins_items_path %>
	</div>
</div>
