<h1>商品情報編集</h1>

<%= form_for(@item, url: {controller: "admins_items", action: "update"}) do |f| %>
	<div class="form-group">
		<%= f.label "商品名" %>
		<br>
		<%= f.text_field :item_name %>
	</div>
	<div class="form-group">
		<%= f.label "アーティスト" %>
		<br>
		<%= f.autocomplete_field :artist_id, autocomplete_artist_name_admins_items_path %>
	</div>
	<div class="form-group">
		<%= f.label "レーベル" %>
		<br>
		<%= f.collection_select(:label_id, Label.all, :id, :label_name) %>
	</div>
	<div class="form-group">
		<%= f.label "ジャンル" %>
		<br>
		<%= f.collection_select(:genre_id, Genre.all, :id, :genre_name) %>
	</div>
	<div class="form-group">
		<%= f.label "値段" %>
		<br>
		<%= f.number_field :price %>
	</div>
	<div class="form-group">
		<%= f.submit "確定" %>
	</div>
<% end %>
