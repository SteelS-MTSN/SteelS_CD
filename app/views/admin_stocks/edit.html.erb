<h1>入荷情報入力</h1>
<!-- <%= render %> サイドバー -->

<%= form_for(@stock, url: {controller: admin_stocks, action: create}) do |f| %>
	<div class="form-group">
		<%= f.label "入荷日" %>
		<br>
		<%= f.datetime_field :stock_date %>
	</div>
	<div class="form-group">
		<%= f.label "卸値" %>
		<br>
		<%= f.number_field :trade_price %>
	</div>
	<div class="form-group">
		<%= f.label "入荷数" %>
		<br>
		<%= f.number_field :stock_count %>
	</div>
	<div class="form-group">
		<%= f.label "入荷元" %>
		<br>
		<%= f.text_field :trader %>
	</div>
	<div class="form-group">
		<%= f.submit "完了" %>
	</div>
<% end %>