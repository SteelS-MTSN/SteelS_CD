<div class="body-sign">
  <div class="up-box">
    <div class="logo-up"></div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="family_name_field">
        <div class="field">
          <%= f.label :family_name, "姓" %><br />
          <%= f.text_field :family_name, autofocus: true, autocomplete: "family_name" %>
        </div>
      </div>
      <div class="first_name_field">
        <div class="field">
          <%= f.label :first_name, "名" %><br />
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
        </div>
      </div>



      <div class="family_kana_field">
        <div class="field">
          <%= f.label :family_kana, "せい" %><br />
          <%= f.text_field :family_kana, autofocus: true, autocomplete: "family_kana" %>
        </div>
      </div>

      <div class="first_kana_field">
        <div class="field">
          <%= f.label :first_kana, "めい" %><br />
          <%= f.text_field :first_kana, autofocus: true, autocomplete: "first_kana" %>
        </div>
      </div>

      <div class="post_code_field">
        <div class="field">
          <%= f.label :post_code, "郵便番号" %><br />
          <%= f.number_field :post_code, autofocus: true, autocomplete: "post_code" %>
        </div>
      </div>

      <div class="address_field">
        <div class="field">
          <%= f.label :adress, "住所" %><br />
          <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
        </div>
      </div>

      <div class="phone_field">
        <div class="field">
          <%= f.label :phone, "電話番号" %><br />
          <%= f.number_field :phone, autofocus: true, autocomplete: "phone" %>
        </div>
      </div>
      <div class="email_up_field">
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      </div>

      <div class="password_up_field">
        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
      </div>

      <div class="password_c_up_field">
        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      </div>

      <div>
        <div class="actions">
          <%= f.submit "Sign up" %>
        </div>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
 </div>
</div>
