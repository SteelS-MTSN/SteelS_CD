<h1>User info</h1>

<%= form_for(@user) do |f| %>
	<h4>姓</h4>
	<%= f.text_field :family_name %>
	<h4>名</h4>
	<%= f.text_field :first_name %>
	<h4>セイ</h4>
	<%= f.text_field :family_kana %>
	<h4>メイ</h4>
	<%= f.text_field :first_kana %>
	<h4>郵便番号</h4>
	<%= f.text_field :post_code %>
	<h4>住所</h4>
	<%= f.text_field :address %>
	<h4>電話番号</h4>
	<%= f.text_field :phone %>
　　<h4>email</h4>
	<%= f.text_field :email %>


	<%= f.submit '確定' %>

	<%= link_to "戻る", user_path(current_user) %>
<% end %>