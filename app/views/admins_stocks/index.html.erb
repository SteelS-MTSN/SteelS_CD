<div class="container">
	<div class="col-md-2">
		<%= render 'admins/side' %>
	</div>
	<div class="col-md-8">
		<h1>入荷一覧</h1>
		<h3><%= link_to "新規商品追加", new_admins_item_path %></h3>
		<table class="table table-striped">
			<tr>
			</tr>
			<% @stocks.each do |f| %>
				<tr>
					<th class="list-title">入荷日</th>
					<th class="order-list">
							<%= f.stock_date %>
					</th>
					<th class="list-title">入荷番号</th>
					<th class="order-list">
						<%= f.id %>
					</th>
				</tr>
				<tr>
					<th class="list-title">入荷元</th>
					<th class="order-list">
						<%= f.trader %>
					</th>
					<th>商品名</th>
					<th class="order-list">
						<%= f.item.item_name  %>
					</th>
				</tr>
				<tr>
					<th class="list-title">原価</th>
					<th class="order-list">
						<%= f.trade_price %>
					</th>
					<th class="list-title">個数</th>
					<th class="order-list">
						<%= f.stock_count %>
					</th>
				</tr>
				<tr>
					<th></th>
					<th></th>
					<th class="list-title">計</th>
					<th class="order-list">
						<%= f.trade_price * f.stock_count %>円
					</th>
				</tr>
				<tr>
					<th></th>
					<th></th>
					<th></th>
					<th></th>
				</tr>
			<% end %>
			<%= paginate @stocks %>
			<tr>
				<th><h3><%= link_to "戻る", admins_path(current_user) %></h3></th>
			</tr>
		</table>
	</div>
</div>



