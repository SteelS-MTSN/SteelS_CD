
<header class="header-main">
	<div class="headline">
	</div>

	<% if user_signed_in? %>
	<div class="message-top">こんにちは　<%= current_user.family_name %> さん</div>
	<% else %>
	<div class="message-top">こんにちは　ゲスト　さん</div>
	<% end %>
</header>

<nav>
	<ul class="nav-list">
		<% if user_signed_in? %>
			<li class="nav-list-item-in1">
				<%= link_to "マイページ", user_path(current_user),class: "head-link"  %>
			</li>
			<li class="nav-list-item-in2">
				<%= link_to "商品一覧",  items_path,class: "head-link" %>
			</li>
			<li class="nav-list-item-in3">
				<%= link_to "カートに移動", carts_path,class: "head-link" %>
			</li>
			<li class="nav-list-item-in4">
				<%= link_to "ログアウト", destroy_user_session_path, method: :delete,class: "head-link" %>
			</li>


			<% else %>

			<li class="nav-list-item-out">
				<%= link_to "商品一覧",  items_path,class: "head-link" %>
			</li>
			<li class="nav-list-item-out">
				<%= link_to "新規登録" ,  new_user_registration_path,class: "head-link" %>
			</li>
			<li class="nav-list-item-out">
				<%= link_to "ログイン" ,  new_user_session_path,class: "head-link" %>
			</li>
		<% end %>
	</ul>
</nav>


