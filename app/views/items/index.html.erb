
		<%= search_form_for @search, url: items_path do |f| %>
			<div class="form-group">
				<%= f.label :item_name, "ジャンル名" %>
				<%= f.search_field :item_name_cont, class: "form-control" %>
			</div>
			<div class="actions"><%= f.submit "Search" %></div>
			<% end %>





<div class="container">
		<div class="col-md-offset-1 col-md-8">
			<table>
				<% @item.each do |item| %>
				 
					<tr>
						<th>

						<%= attachment_image_tag item, :image,  fallback: "no_image.jpg", :width => "50px",:height =>"50px" %>
				       </th>
				    </tr>
					<tr>
						<th>
							<%= item.item_name %>
						</th>
					</tr>
					<tr>
						<th>
							      いいね<%= item.favorites.count %> 
						</th>
					</tr>
					<tr>
						<th>
							<%= item.artist.name %>
						</th>
					</tr>
					<tr>
						<th>
							<p><%= item.price %>円</p>
						</th>
					</tr>

				<% end %>
			    <%= paginate @item %>
			 </table>
		</div>
		<div class="col-md-2">
			<% @item_side.each do |item| %>
					<tr>
						<th>
						    <%= attachment_image_tag item, :image,  fallback: "no_image.jpg", :width => "30px",:height =>"30px" %>
				       </th>
				    </tr>
					<tr>
						<th>
							<%= item.item_name %>
						</th>
					</tr>
					<tr>
						<th>
							<%= item.artist.name %>
						</th>
					</tr>
			<% end %>

		</div>
		<div class="<col-1-lg>"></div>
	
</div>






