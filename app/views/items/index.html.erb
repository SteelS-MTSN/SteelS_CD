




<h1>商品一覧</h1>
	<%= form_tag(items_path,method: :get, class:"btn btn-info col-xs-10 col-xs-offset-1") do %>
	<%= text_field_tag :keyword %>
	<%= submit_tag :"検索" %>
<% end %>


<table>
	<% @items.each do |item| %>
	<tr>
		<th>

		<%= attachment_image_tag item, :image,  fallback: "no_image.jpg", :width => "200px",:height =>"200px" %>
</th>
</tr>

		<tr>
			<th>
				<%= item.item_name %>
			</th>
		</tr>
		<tr>
			<th>
				      いいね<%= item.favorites.count %> 
			</th>
		</tr>
		<tr>
			<th>
				<%= item.artist.name %>
			</th>
		</tr>
		<tr>
			<th>
				<p><%= item.price %>円</p>
			</th>
		</tr>

	<% end %>
    <%= paginate @items %>
</table>






