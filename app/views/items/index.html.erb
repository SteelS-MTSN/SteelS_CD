<%= render 'admins/header' %>
<div class="container">
	
	<div class="row">
		<%= search_form_for @search, url: items_path do |f| %>
			<div class="form-group">
				<%= f.label :item_name, "ジャンル名" %>
				<%= f.search_field :item_name_cont, class: "form-control" %>
			</div>
			<div class="actions"><%= f.submit "Search" %></div>
			<% end %>


<div class="container">
	<div class="row">
		<div class="col-md-offset-1 col-md-8">
				<% @item.each do |item| %>
				 
					<tr>
						<th>

						<%= attachment_image_tag item, :image,  fallback: "no_image.jpg", :width => "50px",:height =>"50px" %>
				       </th>
				    </tr>
					<tr>
						<th>
							<%= item.item_name %>
						</th>
					</tr>
					<tr>
						<th>
							      いいね<%= item.favorites.count %> 
						</th>
					</tr>
					<tr>
						<th>
							<%= item.artist.name %>
						</th>
					</tr>
					<tr>
						<th>
							<p><%= item.price %>円</p>
						</th>
					</tr>

				<% end %>
			    <%= paginate @item %>
			 </table>
		</div>
		<div class="col-md-2">
			<h3>ランキング</h3>
			<% @item_side.each_with_index do |item, i| %>
					<div class="col-md-12">
						<p><%= "#{i+1}" %>位</p>
					    <%= attachment_image_tag item, :image,  fallback: "no_image.jpg", :width => "75px",:height =>"75px" %><br>
						<%= item.item_name %><br>
						<%= item.artist.name %><br>
						<br>
					</div>
			<% end %>

		</div>
		<div class="col-lg-1"></div>
	</div>
	
</div>

<%= render 'admins/fotter' %>






