
<div class="first-container">


	<div class="first-container-item">
		<%= attachment_image_tag @item, :image, :fill, 350, 350 %>
	</div>

	<div class="first-container-item">
		<h1><%= @item.item_name %></h1>
		<h2><%= @item.price %>円(税込み)</h2><br>


		<%= form_with model: Cart.new, local: true do |f| %>
			<%= f.hidden_field :item_id, :value => @item.id %>
		<%= f.submit "カートの追加", class: "btn btn-success" %>
		<% end %>
    </div>

</div>

<div class="info-container">

<div class="info-container-item">
		<table border="1" rules="groups">
		<caption align="top">商品情報</caption>

			<tr>
				<td>アーティスト</td>
				<td><%= @item.artist.name %></td>
				<td>ジャンル</td>
				<td><%= @item.genre.genre_name %></td>
				<td>レーベル</td>
				<td><%= @item.label.label_name %></td>
			</tr>
			</table>
</div>
</div>

					<% @songs.each do |f| %>
				<%=  "no." + f.disc_number + f.song_name  %>

			<% end %>


</div>

	<table>

	<div class="song-information">
		<div class ="song-information-title">曲名</div><br>
			<% @songs.each do |f| %>
				<%=  "no." + f.disc_number + f.song_name  %>
			<% end %>
	</div>


<div class="review-content">
<% session[:review] = @item.id %>
<%= link_to "レビューを書く", new_review_path %>
<br>
<table class="table table-striped">
	<tr>レビュー</tr>
	<% @reviews.each do |f| %>
	<tr>
		<th><%= f.user_id %></th>
		<th><%= f.review_text %></th>
		<% if f.user_id == current_user.id %>
			<th class="list-edit">
				<%= link_to edit_review_path(f.id) do %>
					<button type="button" class="btn btn-success">編集</button>
				<% end %>
			</th>
			<th class="list-destroy">
				<%= link_to review_path(f), method: :delete, "data-confirm" => "本当に削除しますか？" do %>
					<button type="button" class="btn btn-danger">削除</button>
				<% end %>
			</th>
		<% end %>
	</tr>
	<% end %>
</table>

</div>

