<!-- <%= render %> ヘッター -->

<table class="table table-striped">
				<tr>
					<th class="list-title">購入日</th>
					<th class="list-title">配送状況</th>
					<th class="list-title">合計(税込み)</th>
					<th class="list-title">支払金額(送料込)</th>
				</tr>
				<% @order_options.each do |order| %>
					<tr>
						<th class="order-list">
							<%= link_to  order_path(order) do %>
								<%= order.purchase_date %>
							<% end %>
						</th>
						<th class="order-list">
							<%= order.delivery_status %>
						</th>
						<th class="order-list">
							<p><%= order.total_price %>円</p>
						</th>
						<th class="order-list">
							<% pay_price = order.total_price + 500 %>
							<p><%= pay_price %>円</p>
						</th>
					</tr>
				<% end %>
				<%= paginate @orders %>
			</table>

			<%= link_to "戻る", user_path(current_user) %>

